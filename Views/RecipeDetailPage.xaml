<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Receptkonyv_MAUI"
             x:Class="Receptkonyv_MAUI.RecipeDetailPage"
             x:DataType="local:RecipeDetailPageViewModel"
             BackgroundColor="#F7F9FC"
             Title="Recipe Details">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Border StrokeShape="RoundRectangle 20"
                    StrokeThickness="0"
                    HeightRequest="250"
                    HorizontalOptions="Fill"
                    BackgroundColor="White">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,5" Radius="10" Opacity="0.1"/>
                </Border.Shadow>

                <Grid>
                    <Label Text="ðŸ² No image found" 
                           HorizontalOptions="Center" 
                           VerticalOptions="Center" 
                           TextColor="#B0BEC5"/>

                    <Image Source="{Binding Draft.ImageUrl}"
                           Aspect="AspectFill"
                           HorizontalOptions="Fill"
                           VerticalOptions="Fill"/>
                </Grid>
            </Border>

            <Border BackgroundColor="White"
                    StrokeShape="RoundRectangle 16"
                    StrokeThickness="0"
                    Padding="0">
                <Border.Shadow>
                    <Shadow Brush="#FF7043" Offset="0,2" Radius="6" Opacity="0.1"/>
                </Border.Shadow>

                <Grid ColumnDefinitions="6, *">
                    <BoxView Grid.Column="0" Color="#FF7043"/>
                    <VerticalStackLayout Grid.Column="1" Padding="15">
                        <Label Text="Recipe Name" FontSize="12" TextColor="#FF7043" FontAttributes="Bold" TextTransform="Uppercase"/>
                        <Label Text="{Binding Draft.Name}" FontSize="22" TextColor="#263238" FontAttributes="Bold"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <Border BackgroundColor="White"
                    StrokeShape="RoundRectangle 16"
                    StrokeThickness="0"
                    Padding="0">
                <Border.Shadow>
                    <Shadow Brush="#66BB6A" Offset="0,2" Radius="6" Opacity="0.1"/>
                </Border.Shadow>

                <Grid ColumnDefinitions="6, *">
                    <BoxView Grid.Column="0" Color="#66BB6A"/>

                    <VerticalStackLayout Grid.Column="1" Padding="15" Spacing="10">
                        <Label Text="ðŸ›’ Ingredients" FontSize="14" TextColor="#66BB6A" FontAttributes="Bold" TextTransform="Uppercase"/>

                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Draft.Ingredients}"
                                             Spacing="6">

                            <BindableLayout.EmptyView>
                                <Label Text="There are no ingredients" TextColor="Gray"/>
                            </BindableLayout.EmptyView>

                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="local:Ingredient">
                                    <Border BackgroundColor="#F1F8E9" StrokeShape="RoundRectangle 8" StrokeThickness="0" Padding="10,8">
                                        <Grid ColumnDefinitions="25, *">
                                            <Label Grid.Column="0" Text="âœ”" TextColor="#66BB6A" FontAttributes="Bold"/>
                                            <Label Grid.Column="1" Text="{Binding Name}" TextColor="#37474F"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <Border BackgroundColor="White"
                    StrokeShape="RoundRectangle 16"
                    StrokeThickness="0"
                    Padding="0">
                <Border.Shadow>
                    <Shadow Brush="#42A5F5" Offset="0,2" Radius="6" Opacity="0.1"/>
                </Border.Shadow>

                <Grid ColumnDefinitions="6, *">
                    <BoxView Grid.Column="0" Color="#42A5F5"/>

                    <VerticalStackLayout Grid.Column="1" Padding="15">
                        <Label Text="ðŸ“ Description" FontSize="14" TextColor="#42A5F5" FontAttributes="Bold" TextTransform="Uppercase"/>
                        <Label Text="{Binding Draft.Description}" FontSize="16" TextColor="#37474F" LineHeight="1.2"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <VerticalStackLayout Spacing="15">

                <Grid ColumnDefinitions="*, *, *" ColumnSpacing="10">
                    <Button Grid.Column="0" Text="âœï¸ Edit" Command="{Binding EditRecipeCommand}"
                            TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#66BB6A" Offset="0.0" />
                                <GradientStop Color="#43A047" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <Button Grid.Column="1" Text="ðŸ“¤ Share" Command="{Binding ShareRecipeCommand}"
                            TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#42A5F5" Offset="0.0" />
                                <GradientStop Color="#1E88E5" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>

                    <Button Grid.Column="2" Text="ðŸ—‘ï¸ Del" Command="{Binding DeleteRecipeCommand}"
                            TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#EF5350" Offset="0.0" />
                                <GradientStop Color="#D32F2F" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Grid>

                <Button Text="Back to List" Command="{Binding BackToMainPageCommand}"
                        BackgroundColor="White" TextColor="#78909C" 
                        BorderColor="#CFD8DC" BorderWidth="1"
                        FontAttributes="Bold" CornerRadius="12" HeightRequest="50"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>