<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Receptkonyv_MAUI"
             x:Class="Receptkonyv_MAUI.EditRecipePage"
             x:DataType="local:EditRecipePageViewModel"
             Title="EditRecipePage">
    <VerticalStackLayout Spacing="10" Padding="10" VerticalOptions="Center">
        <Label Text="Name"/>
        <Entry Text="{Binding EditedRecipe.Name}"/>
        <Label Text="Ingredients"/>
        <Entry Text="{Binding EditedRecipe.Ingredients}"/>
        <Label Text="Description"/>
        <Entry Text="{Binding EditedRecipe.Description}"/>
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
            <Button Text="Cancel Edit" BackgroundColor="PaleGreen" Command="{Binding CancelEditCommand}"/>
            <Button Text="Save" BackgroundColor="LightSkyBlue" Command="{Binding SaveEditCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>