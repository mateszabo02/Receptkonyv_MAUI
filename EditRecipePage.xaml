<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Receptkonyv_MAUI"
             x:Class="Receptkonyv_MAUI.EditRecipePage"
             x:DataType="local:EditRecipePageViewModel"
             BackgroundColor="#F7F9FC"
             Title="Edit Recipe">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Border StrokeShape="RoundRectangle 20" StrokeThickness="0"
                    HeightRequest="250" HorizontalOptions="Fill" BackgroundColor="White">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="0,5" Radius="10" Opacity="0.1"/>
                </Border.Shadow>
                <Grid>
                    <Label Text="ðŸ“· Image Placeholder" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#B0BEC5"/>
                    <Image Source="{Binding Draft.ImageUrl}" Aspect="AspectFill" HorizontalOptions="Fill" VerticalOptions="Fill"/>
                </Grid>
            </Border>

            <Border BackgroundColor="White" StrokeShape="RoundRectangle 16" StrokeThickness="0" Padding="0">
                <Border.Shadow>
                    <Shadow Brush="#FF7043" Offset="0,2" Radius="6" Opacity="0.1"/>
                </Border.Shadow>
                <Grid ColumnDefinitions="6, *">
                    <BoxView Grid.Column="0" Color="#FF7043"/>
                    <VerticalStackLayout Grid.Column="1" Padding="15" Spacing="5">
                        <Label Text="Recipe Name" FontSize="12" TextColor="#FF7043" FontAttributes="Bold" TextTransform="Uppercase"/>
                        <Entry Text="{Binding Draft.Name}" FontSize="18" TextColor="#263238" Placeholder="e.g. Chili Con Carne" Margin="-5,0,0,0"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <Border BackgroundColor="White" StrokeShape="RoundRectangle 16" StrokeThickness="0" Padding="0">
                <Border.Shadow>
                    <Shadow Brush="#66BB6A" Offset="0,2" Radius="6" Opacity="0.1"/>
                </Border.Shadow>
                <Grid ColumnDefinitions="6, *">
                    <BoxView Grid.Column="0" Color="#66BB6A"/>
                    <VerticalStackLayout Grid.Column="1" Padding="15" Spacing="10">
                        <Label Text="ðŸ›’ Ingredients" FontSize="14" TextColor="#66BB6A" FontAttributes="Bold" TextTransform="Uppercase"/>

                        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Draft.Ingredients}" Spacing="8">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="local:Ingredient">
                                    <Border BackgroundColor="#F1F8E9" StrokeShape="RoundRectangle 10" StrokeThickness="0" Padding="5,2">
                                        <Grid ColumnDefinitions="*, auto">
                                            <Entry Grid.Column="0" Text="{Binding Name}" Placeholder="Ingredient..." FontSize="16" TextColor="#37474F" VerticalOptions="Center"/>
                                            <Button Grid.Column="1" Text="âœ–" WidthRequest="40" HeightRequest="40" BackgroundColor="Transparent" TextColor="#EF5350" FontSize="18"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type local:EditRecipePage}}, Path=BindingContext.RemoveIngredientCommand}"
                                                    CommandParameter="{Binding .}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>

                        <Button Text="âž• Add Ingredient" Command="{Binding AddIngredientCommand}"
                                BackgroundColor="#E8F5E9" TextColor="#66BB6A" FontAttributes="Bold" CornerRadius="10" HorizontalOptions="Start"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <Border BackgroundColor="White" StrokeShape="RoundRectangle 16" StrokeThickness="0" Padding="0">
                <Border.Shadow>
                    <Shadow Brush="#42A5F5" Offset="0,2" Radius="6" Opacity="0.1"/>
                </Border.Shadow>
                <Grid ColumnDefinitions="6, *">
                    <BoxView Grid.Column="0" Color="#42A5F5"/>
                    <VerticalStackLayout Grid.Column="1" Padding="15" Spacing="5">
                        <Label Text="ðŸ“ Instructions" FontSize="14" TextColor="#42A5F5" FontAttributes="Bold" TextTransform="Uppercase"/>
                        <Editor Text="{Binding Draft.Description}" FontSize="16" TextColor="#37474F" Placeholder="Describe the steps..." AutoSize="TextChanges" Margin="-5,0,0,0"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <VerticalStackLayout Spacing="15">

                <Grid ColumnDefinitions="*, *" ColumnSpacing="10">
                    <Button Grid.Column="0" Text="ðŸ“‚ Gallery" Command="{Binding OpenImageCommand}" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#78909C" Offset="0.0" />
                                <GradientStop Color="#546E7A" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button Grid.Column="1" Text="ðŸ“¸ Camera" Command="{Binding TakePhotoCommand}" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#78909C" Offset="0.0" />
                                <GradientStop Color="#546E7A" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Grid>

                <Grid ColumnDefinitions="*, *" ColumnSpacing="10">
                    <Button Grid.Column="0" Text="âŒ Cancel" Command="{Binding CancelEditCommand}" TextColor="#EF5350" BackgroundColor="#FFEBEE" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" BorderColor="#FFCDD2" BorderWidth="1"/>

                    <Button Grid.Column="1" Text="ðŸ’¾ Save" Command="{Binding SaveEditCommand}" TextColor="White" FontAttributes="Bold" CornerRadius="12" HeightRequest="50">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#42A5F5" Offset="0.0" />
                                <GradientStop Color="#1E88E5" Offset="1.0" />
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                </Grid>

            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>