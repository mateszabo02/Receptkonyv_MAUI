<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Receptkonyv_MAUI"
             x:Class="Receptkonyv_MAUI.RecipeDetailPage"
             x:DataType="local:RecipeDetailPageViewModel"
             Title="RecipeDetailPage">
    <VerticalStackLayout Spacing="10" Padding="10" VerticalOptions="Center">
        <Label Text="Name"/>
        <Label Text="{Binding Draft.Name}"/>
        <Label Text="Ingredients"/>
        <Label Text="{Binding Draft.Ingredients}"/>
        <Label Text="Description"/>
        <Label Text="{Binding Draft.Description}"/>
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
            <Button Text="Edit" BackgroundColor="PaleGreen" Command="{Binding EditRecipeCommand}"/>
            <Button Text="Delete" BackgroundColor="PaleVioletRed" Command="{Binding DeleteRecipeCommand}"/>
            <Button Text="Share" BackgroundColor="Aqua"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
            <Button Text="Back to List" BackgroundColor="LightGray" Command="{Binding BackToMainPageCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>